---
import MetricaHead from "../components/metrica-head.astro";
import "../styles/main.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="ru">
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <MetricaHead />

    <link rel="icon" type="image/png" href="/khvostenko-cv/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/khvostenko-cv/favicon.svg" />
    <link rel="shortcut icon" href="/khvostenko-cv/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/khvostenko-cv/apple-touch-icon.png" />
    <link rel="manifest" href="/khvostenko-cv/site.webmanifest" />
  </head>

  <body class="bg-neutral-900 max-w-[80ch] mx-auto">
    <slot />
  </body>
</html>
