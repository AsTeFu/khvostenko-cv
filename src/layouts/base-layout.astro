---
import "../styles/main.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="ru">
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="icon" type="image/x-icon" href="/khvostenko-cv/favicon.ico" />
    <link rel="icon" type="image/png" sizes="16x16" href="/khvostenko-cv/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/khvostenko-cv/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="48x48" href="/khvostenko-cv/favicon-48x48.png" />
    <link rel="icon" type="image/svg+xml" href="/khvostenko-cv/favicon.svg" />
    <link rel="manifest" href="/khvostenko-cv/manifest.webmanifest" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="theme-color" content="#171717" />
    <meta name="application-name" content={title} />
    <link rel="apple-touch-icon" sizes="180x180" href="apple-touch-icon.png" />
    <link rel="mask-icon" href="/khvostenko-cv/safari-pinned-tab.svg" color="#171717" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="CV" />
    <meta name="msapplication-TileColor" content="#171717" />
    <meta name="msapplication-config" content="/khvostenko-cv/browserconfig.xml" />
    <link rel="yandex-tableau-widget" href="/khvostenko-cv/yandex-browser-manifest.json" />
  </head>

  <body class="bg-neutral-900 max-w-[80ch] mx-auto">
    <slot />
  </body>
</html>
