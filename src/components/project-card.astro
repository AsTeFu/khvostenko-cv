---
import type { Project } from "../typings/project";

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="grid">
  <h3 class="text-h3 mb-2.5">{project.title}</h3>

  <div class="grid gap-4 grid-cols-2 mb-5 text-small text-neutral-400">
    <p>Тип решения: {project.solutionType}</p>
    <p>Роль: {project.role}</p>
  </div>

  <div class="grid gap-1.5 mb-6">
    {project.description.map((paragraph) => <p class="text-pretty">{paragraph}</p>)}
  </div>

  <details class="text-neutral-400">
    <summary class="text-h4 cursor-pointer">Чем занимался</summary>

    <ul class="grid gap-1 list-disc pl-6 mt-2">
      {project.workedOn.map((task) => <li>{task}</li>)}
    </ul>
  </details>
</div>
