---
interface Props {
  title: string;
  date: string;
  place: string;
  description: string;
}

const { title, date, place, description } = Astro.props;
---

<div class="grid gap-12 grid-cols-[2fr_3fr]">
  <div class="flex flex-col gap-1">
    <h3 class="text-h4">{title}</h3>
    <p class="text-neutral-400 text-small">{date}</p>
  </div>

  <div class="flex flex-col gap-1">
    <h4 class="text-h5">{place}</h4>
    <p class="text-neutral-400 text-small">{description}</p>
  </div>
</div>
